text
cdrom
lang en_US.UTF-8
keyboard us
network --onboot yes --bootproto dhcp
rootpw passwd
firewall --disabled
authconfig --enableshadow --enablemd5
selinux --disabled
timezone UTC
bootloader --location=mbr --driveorder=hda --append="crashkernel=auto rhgb quiet"
zerombr yes
clearpart --all --drives=hda --initlabel
part /boot --fstype=ext3 --size=100 --ondisk=hda
part pv.8 --grow --size=1 --ondisk=hda
volgroup VolGroup --pesize=32768 pv.8
logvol swap --name=lv_swap --vgname=VolGroup --grow --size=1008 --maxsize=2016
logvol / --fstype=ext3 --name=lv_root --vgname=VolGroup --grow --size=1024
poweroff
firstboot --disable

%packages --nobase


%post
mount /dev/cdrom /mnt
cp /mnt/post_install.sh /root/
bash /root/post_install.sh > /root/post_install.log 2>&1
umount /mnt

