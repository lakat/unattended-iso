text
cdrom
lang en_US.UTF-8
keyboard us
network --onboot yes --bootproto dhcp
rootpw passwd
firewall --disabled
authconfig --enableshadow --enablemd5
selinux --disabled
timezone UTC
bootloader --location=mbr --driveorder=hda --append="crashkernel=auto rhgb quiet"
zerombr yes
clearpart --all --drives=hda --initlabel
part / --fstype=ext3 --size=1000 --grow --ondisk=hda
poweroff
firstboot --disable

%packages --nobase


%post
mount -o ro -t iso9660 /dev/hdc /mnt >> /root/post_install.log 2>&1
cp /mnt/post_install.sh /root/ >> /root/post_install.log 2>&1
bash /root/post_install.sh >> /root/post_install.log 2>&1
umount /mnt >> /root/post_install.log 2>&1

